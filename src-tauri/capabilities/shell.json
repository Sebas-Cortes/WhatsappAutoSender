{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "shell-permissions",
    "description": "Shell permissions",
    "windows": [
        "main"
    ],
    "permissions": [
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "backend",
                    "cmd": "backend",
                    "sidecar": true
                }
            ]
        },
        {
            "identifier": "shell:allow-spawn",
            "allow": [
                {
                    "name": "backend",
                    "cmd": "backend",
                    "sidecar": true
                }
            ]
        },
        {
            "identifier": "shell:allow-stdin-write",
            "allow": [
                {
                    "name": "backend",
                    "cmd": "backend",
                    "sidecar": true
                }
            ]
        },
        {
            "identifier": "shell:allow-kill",
            "allow": [
                {
                    "name": "backend",
                    "cmd": "backend",
                    "sidecar": true
                }
            ]
        }
    ]
}