{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "backend",
          "cmd": "backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "backend",
          "cmd": "backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-stdin-write",
      "allow": [
        {
          "name": "backend",
          "cmd": "backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-kill",
      "allow": [
        {
          "name": "backend",
          "cmd": "backend",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}